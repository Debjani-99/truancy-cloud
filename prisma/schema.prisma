generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  COURT
  SCHOOL
}

model User {
  id           String   @id @default(uuid())
  firstName    String
  lastName     String
  email        String   @unique
  passwordHash String
  role         Role
  countyId     String?
  schoolId     String?
  createdAt    DateTime @default(now())

  county  County?  @relation(fields: [countyId], references: [id], onDelete: SetNull)
  school  School?  @relation(fields: [schoolId], references: [id], onDelete: SetNull)
  uploads Upload[]

  @@index([countyId])
  @@index([schoolId])
}

model County {
  id   String @id @default(uuid())
  name String @unique

  schools    School[]
  courtUsers User[] // users with role=COURT (enforced in app logic)
}

model School {
  id       String @id @default(uuid())
  name     String
  countyId String

  county  County   @relation(fields: [countyId], references: [id], onDelete: Restrict)
  users   User[]   // users with role=SCHOOL (enforced in app logic)
  uploads Upload[]

  @@unique([countyId, name])
  @@index([countyId])
}

enum UploadStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REQUIRES_REVIEW
}

model Upload {
  id           String       @id @default(uuid())
  filename     String
  storageKey   String
  fileSize     Int
  mimeType     String
  status       UploadStatus @default(PENDING)
  schoolId     String
  uploadedById String
  uploadedAt   DateTime     @default(now())
  errorMessage String?

  school     School @relation(fields: [schoolId], references: [id])
  uploadedBy User   @relation(fields: [uploadedById], references: [id])

  @@index([schoolId])
  @@index([uploadedById])
}
